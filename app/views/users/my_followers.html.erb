<h1>Followers</h1>

<%= render 'followers/lookup' %>
<% if @followerships.size > 0 %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @followerships.each do |follower| %>
        <tr>
          <td><%= follower.full_name %></td>
          <td><%= follower.email %></td>
          <td>
            <%= link_to "View Profile", user_path(follower), class:"btn btn-primary btn-xs" %>
            <%= link_to "Unfollow", followership_path(follower), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "btn btn-xs btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row col-lg-12">
    <p class="lead">You have no friends... fucking loser.</p>
  </div>
<% end %>
